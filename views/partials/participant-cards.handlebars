<div class="row">
  <div class="col-lg-6 mb-3 mb-lg-0">
    <div class="card border-primary">
      <div class="card-header text-bg-primary">
        Today
      </div>
      <div class="card-body">
        {{#each participants}}
          {{> daycard number=@index day='today' participant=this}}
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card border-secondary">
      <div class="card-header text-bg-secondary">
        Tomorrow
      </div>
      <div class="card-body">
        {{#each participants}}
          {{> daycard number=@index day='tomorrow' participant=this}}
        {{/each}}
      </div>
    </div>
  </div>
</div>


